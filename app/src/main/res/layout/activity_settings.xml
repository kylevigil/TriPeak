<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kyle.myapplication.Settings"
    android:background="@android:color/darker_gray">


    <Switch
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Score"
        android:id="@+id/Score"
        android:checked="true"
        android:textSize="30sp"
        android:switchPadding="50dp"
        android:paddingBottom="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="@style/shadow" />

    <Switch
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Cards Left"
        android:id="@+id/Cards"
        android:checked="true"
        android:textSize="30sp"
        android:switchPadding="50dp"
        android:paddingBottom="15dp"
        android:layout_below="@+id/Score"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="@style/shadow" />

    <Switch
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Hints"
        android:id="@+id/Hints"
        android:checked="true"
        android:textSize="30sp"
        android:switchPadding="50dp"
        android:paddingBottom="15dp"
        android:layout_below="@+id/Cards"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="@style/shadow" />

    <Switch
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Undo"
        android:id="@+id/Undo"
        android:checked="true"
        android:textSize="30sp"
        android:switchPadding="50dp"
        android:paddingBottom="15dp"
        android:layout_below="@+id/Hints"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="@style/shadow" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Background Color:"
        android:id="@+id/textView"
        android:layout_below="@+id/Undo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/shadow"
        android:textSize="30dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/backgrounds">

            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Red"
                android:id="@+id/red"
                android:checked="false"
                android:textColor="@android:color/white"
                android:background="#280003"
                android:layout_marginBottom="5dp"
                android:onClick="onRadioButtonClicked" />

            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Blue"
                android:id="@+id/blue"
                android:checked="false"
                android:textColor="@android:color/white"
                android:background="#06112C"
                android:layout_marginBottom="5dp"
                android:onClick="onRadioButtonClicked" />

            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Green"
                android:id="@+id/green"
                android:checked="true"
                android:background="#ff003609"
                android:textColor="@android:color/white"
                android:layout_marginBottom="5dp"
                android:onClick="onRadioButtonClicked" />

            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Purple"
                android:id="@+id/purple"
                android:checked="false"
                android:textColor="@android:color/white"
                android:background="#1C042C"
                android:layout_marginBottom="5dp"
                android:onClick="onRadioButtonClicked" />

            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Black"
                android:id="@+id/black"
                android:checked="false"
                android:textColor="@android:color/white"
                android:background="@android:color/black"
                android:layout_marginBottom="5dp"
                android:onClick="onRadioButtonClicked" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Reset High Score"
                android:id="@+id/reset"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="true"
                android:background="@android:color/white"
                android:layout_marginTop="20dp"
                android:onClick="reset" />
        </RadioGroup>

    </RelativeLayout>

</RelativeLayout>
